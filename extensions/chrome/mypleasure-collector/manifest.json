{
  "name": "Collecteur MyPleasu.re",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Récupérer les vidéos d'une page web pour les ajouter à vos collections sur MyPleasu.re.",
  "update_url": "https://still-mountain-6425.herokuapp.com/extensions/chrome/updates.xml",

  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/19x19.png",
      "38": "icons/38x38.png"
    },
    "default_title": "MyPleasu.re - capturer les vidéos sur la page"
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/jquery.min.js", "scripts/lodash.min.js", "scripts/sites.js", "scripts/content.js"],
      "css": ["styles/style.css"]
    }
  ]
}